@inherits OurUmbraco.Our.Models.OurUmbracoTemplatePage
@{
    Layout = "~/Views/CommunityHubPageLayout.cshtml";
}

<section class="community">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>@Model.Content.Name</h1>
                <p>@(Model.Content.GetPropertyValue<string>("headline"))</p>
            </div>
            <div class="col-md-12">
                @(Model.Content.GetPropertyValue<IHtmlString>("bodyText"))
                <p>&nbsp;</p>
            </div>

            <div class="col-md-12">
                <small>Recent blog posts</small>
            </div>
            <div class="col-md-12 flex" id="community-posts">
                @Html.Partial("~/Views/Partials/Community/Blogs.cshtml")
            </div>
        </div>
    </div>
</section>